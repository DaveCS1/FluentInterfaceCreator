<Window x:Class="FluentInterfaceCreator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:resources="clr-namespace:FluentInterfaceCreator.Resources"
        xmlns:viewModels="clr-namespace:Engine.ViewModels;assembly=Engine"
        xmlns:componentModel="clr-namespace:System.ComponentModel;assembly=WindowsBase"
        xmlns:system="clr-namespace:System;assembly=mscorlib"
        d:DataContext="{d:DesignInstance viewModels:ProjectEditorViewModel}"
        mc:Ignorable="d"
        Title="{Binding Source={x:Static resources:Literals.AppTitle}}" 
        Height="768" Width="1024">

    <Window.Resources>
        <BooleanToVisibilityConverter x:Key="BooleanToVisibility" />
        
        <CollectionViewSource x:Key="Methods" Source="{Binding CurrentProject.Methods}"
                              IsLiveSortingRequested="True">
            <CollectionViewSource.SortDescriptions>
                <componentModel:SortDescription PropertyName="SortKey"
                                                Direction="Ascending"/>
            </CollectionViewSource.SortDescriptions>
            <CollectionViewSource.LiveSortingProperties>
                <system:String>SortKey</system:String>
            </CollectionViewSource.LiveSortingProperties>
        </CollectionViewSource>

        <CollectionViewSource x:Key="ChainableMethods" Source="{Binding CurrentProject.ChainableMethods}"
                              IsLiveSortingRequested="True">
            <CollectionViewSource.SortDescriptions>
                <componentModel:SortDescription PropertyName="SortKey"
                                                Direction="Ascending"/>
            </CollectionViewSource.SortDescriptions>
            <CollectionViewSource.LiveSortingProperties>
                <system:String>SortKey</system:String>
            </CollectionViewSource.LiveSortingProperties>
        </CollectionViewSource>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <Menu Grid.Row="0">
            <MenuItem Header="{Binding Source={x:Static resources:Literals.File}}">
                <MenuItem Header="{Binding Source={x:Static resources:Literals.CreateNewProject}}"
                          Click="OnClick_CreateNewProject"/>
                <MenuItem Header="{Binding Source={x:Static resources:Literals.LoadProject}}"/>
                <Separator/>
                <MenuItem Header="{Binding Source={x:Static resources:Literals.Exit}}" 
                          Click="OnClick_Exit"/>
            </MenuItem>
            <MenuItem Header="{Binding Source={x:Static resources:Literals.Help}}">
                <MenuItem Header="{Binding Source={x:Static resources:Literals.ViewHelp}}"/>
                <Separator/>
                <MenuItem Header="{Binding Source={x:Static resources:Literals.AboutFluentInterfaceCreator}}" 
                          Click="OnClick_About"/>
            </MenuItem>
        </Menu>
        
        <Grid Grid.Row="1"
              Margin="10"
              Visibility="{Binding HasProject, Converter={StaticResource BooleanToVisibility}}">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <Label Grid.Row="0" Grid.Column="0"
                   FontWeight="Bold"
                   Content="{Binding Source={x:Static resources:Literals.ProjectName}}"/>

            <Label Grid.Row="1" Grid.Column="0"
                   FontWeight="Bold"
                   Content="{Binding Source={x:Static resources:Literals.Language}}"/>

        </Grid>
        
        <TabControl Grid.Row="2"
                    Visibility="{Binding HasProject, Converter={StaticResource BooleanToVisibility}}"
                    Margin="10">
            
            <TabItem Header="{Binding Source={x:Static resources:Literals.Methods}}">
                
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>

                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="1*"/>
                        <ColumnDefinition Width="1*"/>
                    </Grid.ColumnDefinitions>

                    <!-- Left column (all methods, plus method entry controls) -->
                    <Grid Grid.Row="0" Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>

                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="Auto"/>
                        </Grid.ColumnDefinitions>

                        <DataGrid Grid.Row="0" Grid.Column="0"
                              Grid.ColumnSpan="3"
                              Margin="10"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              CanUserReorderColumns="False"
                              CanUserSortColumns="False"
                              ItemsSource="{Binding Source={StaticResource Methods}}">

                            <DataGrid.Columns>
                                <DataGridTextColumn 
                                Header="{Binding Source={x:Static resources:Literals.Action}}"
                                Binding="{Binding ActionToPerform.Name}"/>

                                <DataGridTextColumn 
                                Header="{Binding Source={x:Static resources:Literals.Name}}"
                                Binding="{Binding Name}"/>
                            </DataGrid.Columns>

                        </DataGrid>

                        <ComboBox Grid.Row="1" Grid.Column="0"
                              Margin="10"
                              Width="90"
                              ItemsSource="{Binding CurrentProject.Actions}"
                              SelectedItem="{Binding MethodAction}"
                              SelectedValuePath="ID"
                              DisplayMemberPath="Name"/>

                        <TextBox Grid.Row="1" Grid.Column="1"
                             Margin="10"
                             Width="200"
                             Text="{Binding MethodName, UpdateSourceTrigger=PropertyChanged}">
                        </TextBox>

                        <Button Grid.Row="1" Grid.Column="2"
                            Margin="10"
                            MinWidth="125"
                            IsEnabled="{Binding CanAddMethod}"
                            Content="{Binding Source={x:Static resources:Literals.AddMethod}}"
                            Click="OnClick_AddMethod"/>
                    </Grid>

                    <!-- Right column (chainable (continue or execute) methods) -->
                    <Grid Grid.Row="0" Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition Height="Auto"/>
                        </Grid.RowDefinitions>
                        
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>

                        <Label Grid.Row="0" Grid.Column="0"
                               Margin="10"
                               HorizontalAlignment="Center"
                               Content="{Binding Source={x:Static resources:Literals.SelectTheMethodsAvailableAfterMethod}}"/>
                        
                        <DataGrid Grid.Row="1" Grid.Column="0"
                              Margin="10"
                              AutoGenerateColumns="False"
                              HeadersVisibility="Column"
                              CanUserAddRows="False"
                              CanUserDeleteRows="False"
                              CanUserResizeRows="False"
                              CanUserReorderColumns="False"
                              CanUserSortColumns="False"
                              ItemsSource="{Binding Source={StaticResource ChainableMethods}}">

                            <DataGrid.Columns>
                                <DataGridTextColumn 
                                Header="{Binding Source={x:Static resources:Literals.Action}}"
                                Binding="{Binding ActionToPerform.Name}"/>

                                <DataGridTextColumn 
                                Header="{Binding Source={x:Static resources:Literals.Name}}"
                                Binding="{Binding Name}"/>
                            </DataGrid.Columns>

                        </DataGrid>

                    </Grid>
                    
                </Grid>

            </TabItem>

            <TabItem Header="{Binding Source={x:Static resources:Literals.Interfaces}}">

            </TabItem>

        </TabControl>

        <StackPanel Grid.Row="3"
                    HorizontalAlignment="Right"
                    Orientation="Horizontal">

            <Button MinWidth="200"
                    Margin="10"
                    IsEnabled="{Binding CanCreateFile}"
                    Content="{Binding Source={x:Static resources:Literals.CreateFluentInterfaceFile}}"/>

            <Button MinWidth="75"
                    Margin="10"
                    IsEnabled="{Binding HasChanges}"
                    Content="{Binding Source={x:Static resources:Literals.Save}}"/>

        </StackPanel>
        
    </Grid>

</Window>
